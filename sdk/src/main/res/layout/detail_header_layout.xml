<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="#1E88E5"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/detail_header_back_img"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/top_back"/>

    <TextView
        android:id="@+id/detail_header_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/detail_header_back_img"
        android:layout_marginLeft="12dp"
        android:textSize="22dp"
        android:text="@string/detail_header_title"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/detail_header_select_all"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:text="@string/buy_books_chose_all"
        android:layout_alignParentRight="true"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:visibility="gone"/>

</RelativeLayout>