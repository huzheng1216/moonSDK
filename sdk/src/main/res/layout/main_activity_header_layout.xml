<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_header_layout"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="#1e88e5"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/main_header_search_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/top_search"/>
    
    <ImageView
        android:id="@+id/main_header_left_menu"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/top_menu"/>

    <TextView
        android:id="@+id/main_header_prompt"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginLeft="22dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/main_header_left_menu"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:text="XXXXXX"/>

    <RelativeLayout
        android:id="@+id/main_header_search_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_header_left_menu"
        android:layout_toLeftOf="@id/main_header_search_icon"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="13dp"
        android:visibility="gone">
        
        <EditText
            android:id="@+id/main_header_search_edittext"
            style="@style/top_edittext"
            android:hint="@string/search_prompt"
            android:textColorHint="#7db1ed"/>
        
        <ImageView
            android:id="@+id/main_header_search_imput_del"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/top_del"/>
    </RelativeLayout>

</RelativeLayout>