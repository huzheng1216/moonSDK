<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider" >@drawable/main_category_divider_line</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">4dip</item>
        <item name="android:background">@drawable/main_bottombar_itembg_selector</item>
        <item name="android:textColor">@drawable/main_bottombar_textcolor_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="top_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:background">@drawable/main_search_edittext_select</item>-->
    </style>

    <style name="detail_button_bt1">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">11.6dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@mipmap/bg_buyread</item>
        <item name="android:drawableTop">@drawable/detail_bottombar_buy_selector</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/detail_bottombar_textcolor_selector1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="detail_button_bt2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingTop">7.6dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/detail_bottombar_textcolor_selector2</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="landing_button_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">33dp</item>
        <item name="android:layout_marginRight">33dp</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="landing_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="userinfo_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#ffffff</item>
    </style>


    <style name="userinfo_recharge_bt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="userinfo_tx">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="userinfo_bt_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="userinfo_recharge_bt_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="line_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">#e5e5e5</item>
    </style>

    <!-- 对话框样式(要什么样式自己网上找去…应该没有比我懒得吧) : --><!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="dialog_ios_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 一个很正常的样式 -->
    <style name="common_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- checkbox样式 -->
    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_box_style</item>
    </style>

    <style name="button_buy_style" parent="@android:style/Theme.Dialog">

    </style>


</resources>
